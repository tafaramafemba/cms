<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Portal H2H" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="icon" href="<%= asset_path 'h2hfavicon.jpg' %>" type="image/jpg">


    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "flash_notifications", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "styles", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "table_design", "data-turbo-track": "reload" %>

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">    <!-- Font Awesome for icons -->


    <%= javascript_importmap_tags %>
  </head>

  <body>
      <% if admin_signed_in? %>

        <header id="home">
        <div class="logo-container">
          <%= image_tag 'logo.svg', alt: 'Hand2Hand Couriers Logo', class: 'logo' %>
        </div>
        <label for="menu_collapse_icon" class="menu_collapse_icon_label" id="menu-icon-label">
            <div class="menu_bar">
              <div class="line line1"></div>
              <div class="line line2"></div>
              <div class="line line3"></div>
            </div>
          </label>
          
          <nav class="nav_menu" id="nav-menu">
            <ul>
                <li class="menu-item"><%= link_to 'Home', root_path %></li>
                <li class="menu-item"><%= link_to 'Category Settings', categories_path %></li>
                <li class="menu-item"><%= link_to 'City Settings', cities_path %></li>
                <li class="menu-item"><%= link_to 'Edit Profile', edit_admin_registration_path %></li>
                <li class="menu-item"><%= button_to "Sign Out", destroy_admin_session_path, method: :delete, class: 'btn-delete' %></li>
            </ul>
          </nav>
        </header>
      <% else %>
        <div id="home" class="header" >
          <div class="logo-container">
            <%= image_tag 'logo.svg', alt: 'Hand2Hand Couriers Logo', class: 'logo' %>
          </div>
        </div>
    <% end %>

    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
