<%= link_to 'Add New Category', new_category_path, class: 'btn btn-primary' %>

<table class="table-custom">
  <thead>
    <tr>
      <th>Name</th>
      <th>Base Price</th>
      <th>Minimum Cost</th>
      <th>Additional Cost Per Gram</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>$<%= category.base_price %></td>
        <td>$<%= category.minimum_cost %></td>
        <td>$<%= category.additional_cost_per_gram %></td>
        <td><%= category.fee_percentage %></td>
        
        <td>
          <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary' %> |
          <%= button_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-delete' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

